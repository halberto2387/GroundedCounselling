# Environment Variables for GroundedCounselling API Service
# Copy this file to .env and configure with your actual values

# =================
# Server Configuration
# =================
DEBUG=true
ENVIRONMENT=development
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_V1_STR=/api/v1

# =================
# Security & Secrets
# =================
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-min
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-32-chars
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-this-in-production-32
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# =================
# Database Configuration (Neon PostgreSQL)
# =================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/grounded_counselling
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =================
# Redis Configuration (Upstash)
# =================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# =================
# CORS Configuration
# =================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================
# Rate Limiting
# =================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# =================
# Email Service (Resend)
# =================
RESEND_API_KEY=re_your_resend_api_key_here
EMAILS_FROM_EMAIL=noreply@groundedcounselling.com
EMAILS_FROM_NAME=GroundedCounselling

# =================
# SMS Service (Twilio)
# =================
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# =================
# Payment Processing (Stripe)
# =================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =================
# File Storage (AWS S3)
# =================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=grounded-counselling-uploads

# =================
# Video Conferencing
# =================
VIDEO_PROVIDER=jitsi
# For Jitsi Meet
JITSI_DOMAIN=meet.jit.si
# For LiveKit (future migration)
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_WS_URL=wss://your-livekit-instance.com

# =================
# OAuth Providers
# =================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# =================
# Search Service (Meilisearch)
# =================
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key_here

# =================
# Monitoring & Observability (Sentry)
# =================
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development
ENABLE_SENTRY=false

# =================
# Logging Configuration
# =================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =================
# Background Tasks
# =================
# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
# RQ Configuration (alternative to Celery)
RQ_REDIS_URL=redis://localhost:6379/3

# =================
# File Upload Configuration
# =================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain

# =================
# Encryption & PHI Protection
# =================
ENCRYPTION_KEY=your-32-character-encryption-key-for-phi-data-protection

# =================
# Compliance & Audit
# =================
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=2555

# =================
# Development & Testing
# =================
# Admin user for initial setup
ADMIN_EMAIL=admin@groundedcounselling.com
ADMIN_PASSWORD=change-this-secure-password-in-production